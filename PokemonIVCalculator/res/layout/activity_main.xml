<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/pokeSpecies"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="PokÃ©mon Species" />

    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/pokeSpecies"
        android:text="" />

    <TextView
        android:id="@+id/nature"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@id/emptyTextView"
        android:text="Nature" />

    <EditText
        android:id="@+id/PokemonEditText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/nature"
        android:hint="Pokemon" />

    <Spinner
        android:id="@+id/pokemon"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/nature"
        android:layout_toRightOf="@id/PokemonEditText"
        android:prompt="@string/pokemon" />

    <Spinner
        android:id="@+id/pokemonType"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/nature"
        android:layout_toRightOf="@id/pokemon"
        android:prompt="@string/pokemonType" />

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:padding="13dp"
        android:text="Level" />

    <TextView
        android:id="@+id/hp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/level"
        android:padding="13dp"
        android:text="HP" />

    <TextView
        android:id="@+id/atk"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/hp"
        android:padding="13dp"
        android:text=" Atk" />

    <TextView
        android:id="@+id/def"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/atk"
        android:padding="13dp"
        android:text="  Def" />

    <TextView
        android:id="@+id/sp.A"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/def"
        android:padding="13dp"
        android:text=" Sp.A" />

    <TextView
        android:id="@+id/sp.D"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/sp.A"
        android:padding="13dp"
        android:text=" Sp.D" />

    <TextView
        android:id="@+id/spd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/sp.D"
        android:padding="13dp"
        android:text="Spd" />

    <TextView
        android:id="@+id/dex"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/PokemonEditText"
        android:layout_toRightOf="@id/spd"
        android:padding="13dp"
        android:text="#Dex" />

    <EditText
        android:id="@+id/leveledittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/level"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/hpedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hp"
        android:layout_toRightOf="@id/leveledittext"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/atkedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/atk"
        android:layout_toRightOf="@id/hpedittext"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/defedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/def"
        android:layout_toRightOf="@id/atkedittext"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/sp.Aedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp.A"
        android:layout_toRightOf="@id/defedittext"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/sp.Dedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sp.D"
        android:layout_toRightOf="@id/sp.Aedittext"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/spdedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spd"
        android:layout_toRightOf="@id/sp.Dedittext"
        android:hint="123"
        android:maxLength="3" />

    <EditText
        android:id="@+id/dexedittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dex"
        android:layout_toRightOf="@id/spdedittext"
        android:hint="123"
        android:maxLength="3" />

</RelativeLayout>